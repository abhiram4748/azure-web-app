rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User Cart: Only the owner can read/write their own cart
    match /carts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Products: Publicly readable, but writable only by admins (future proofing)
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Lock writes for now
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
